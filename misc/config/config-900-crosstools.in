menu_begin MENU_CROSSTOOLS 'Cross Toolchain Creation'
  	if [ -f "architecture/$ROCKCFG_ARCH/archtest.sh" ] ; then
		. architecture/$ROCKCFG_ARCH/archtest.sh
	else
		. architecture/$ROCKCFG_ARCH/archtest.out
	fi

	for crosstarget in sparc sparc64 mips mipsel mips64 mips64el powerpc i386 x86_64 ; do
		[ "$crosstarget-unknown-linux-gnu" == "$arch_target" ] && continue ;
		bool "Build $crosstarget cross toolchain" ROCKCFG_PKG_CROSSTOOL_$crosstarget 0

		if [ "$( eval echo \$ROCKCFG_PKG_CROSSTOOL_$crosstarget )" == 1 ] ; then
			pkgfork linux-libc-headers linux-libc-headers-cross-$crosstarget \
				stages -----5---9 priority 600.000
			pkgfork linux linux26-headers-cross-$crosstarget \
				stages -----5---9  priority 600.000
			pkgfork glibc $ROCKCFG_PKG_GLIBC_BRANCH-cross-$crosstarget \
				stages -----56--9 priority 601.000
			pkgfork binutils binutils-cross-$crosstarget \
				stages -----5---9 priority 602.000
			pkgfork gcc $ROCKCFG_DEFAULT_CC-cross-$crosstarget \
				stages -----56--9 priority 603.000
		fi
	done
menu_end

