mount -n -t proc proc /proc
mount -n -t tmpfs tmpfs /tmp
mount -n -t sysfs sys /sys

ttydevs="vc/2 vc/3"

for x in ${ttydevs}  ; do
	( ( while : ; do agetty -i 38400 ${x} -n -l /bin/login-shell ; done ) & )
done

mount -n -t ramfs devfs /dev

/bin/keymap
/bin/hardware
/bin/kernel

exec < /dev/console > /dev/console 2> /dev/console ; cd /

echo " _       __     __                             __           __ _    ______"
echo "| |     / /__  / /________  ____ ___  ___     / /_____     / /| |  / / __ \\"
echo "| | /| / / _ \/ / ___/ __ \/ __ \`__ \/ _ \   / __/ __ \   / / | | / / /_/ /"
echo "| |/ |/ /  __/ / /__/ /_/ / / / / / /  __/  / /_/ /_/ /  / /__| |/ / ____/"
echo "|__/|__/\___/_/\___/\____/_/ /_/ /_/\___/   \__/\____/  /_____/___/_/"
echo ""
echo "A lot of fun wishes:"
echo "The LVP Team:"
echo "	-Benjamin 'blindcoder' Schieder"

agetty -i 38400 vc/1 -n -l /bin/linuxrc2
