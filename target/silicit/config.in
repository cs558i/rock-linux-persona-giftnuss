pkgfilter sed -e '
   / lua / { p; d; };
   / jed / { p; d; };
   / exim / { p; d; };
   / glib / { p; d; }; # fribidi dependency
   / base / ! s/^X/O/;
   '

pkgenable cpio
pkgenable rockinitramfs

ROCKCFGSET_DO_REBUILD_STAGE=0
ROCKCFGSET_SPLIT_DOC=0
ROCKCFGSET_SPLIT_DEV=0
	
ROCKCFGSET_PKG_PERL5_THREADS=1

ROCKCFGSET_DEFAULT_MTA=exim
pkgenable exim
pkgdisable postfix

pkgdisable mysql41
pkgdisable gcc2
pkgdisable gcc32
pkgdisable gcc33
pkgdisable gcc34
pkgdisable gcc40
pkgdisable gcc41
pkgdisable gcc42

# this does not compile with gcc43, because missing  iostream.h 
pkgdisable bdb33

# if enabled this would need imake
# network audio server
pkgdisable nas
